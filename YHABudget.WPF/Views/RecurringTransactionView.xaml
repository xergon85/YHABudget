<UserControl x:Class="YHABudget.WPF.Views.RecurringTransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             Background="{StaticResource BackgroundLightBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Ã…terkommande Transaktioner"
                   Style="{StaticResource SectionHeaderStyle}"/>

        <!-- Recurring Transaction List -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Margin="0,20,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Content="+ Ny Ã¥terkommande transaktion"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding AddRecurringTransactionCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,15"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <DataGrid ItemsSource="{Binding RecurringTransactions}"
                              SelectedItem="{Binding SelectedRecurringTransaction}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              RowHeight="45"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Disabled"
                              EnableRowVirtualization="False"
                              MouseDoubleClick="DataGrid_MouseDoubleClick">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background"
                                        Value="White"/>
                                <Setter Property="FontWeight"
                                        Value="SemiBold"/>
                                <Setter Property="Padding"
                                        Value="8"/>
                                <Setter Property="BorderThickness"
                                        Value="0,0,0,1"/>
                                <Setter Property="BorderBrush"
                                        Value="#E0E0E0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness"
                                        Value="0"/>
                                <Setter Property="Padding"
                                        Value="8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Beskrivning"
                                                Binding="{Binding Description}"
                                                Width="*"/>

                            <DataGridTextColumn Header="Kategori"
                                                Binding="{Binding Category.Name}"
                                                Width="150"/>

                            <DataGridTextColumn Header="Belopp"
                                                Binding="{Binding Amount, StringFormat='{}{0:N0} kr'}"
                                                Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Right"/>
                                        <Setter Property="FontWeight"
                                                Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}"
                                                         Value="Income">
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource IncomeBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}"
                                                         Value="Expense">
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource ExpenseBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Ã…terkommer"
                                                Binding="{Binding RecurrenceType}"
                                                Width="100"/>

                            <DataGridTemplateColumn Header="Status"
                                                    Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsActive, Mode=OneWay}"
                                                  Command="{Binding DataContext.ToggleActiveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  CommandParameter="{Binding Id}"
                                                  Content="Aktiv"
                                                  VerticalAlignment="Center"
                                                  IsHitTestVisible="True"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header=""
                                                    Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ—‘"
                                                Width="24"
                                                Height="24"
                                                FontSize="12"
                                                Command="{Binding DataContext.DeleteRecurringTransactionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding Id}"
                                                ToolTip="Ta bort"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
