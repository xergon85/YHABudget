<UserControl x:Class="YHABudget.WPF.Views.RecurringTransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:YHABudget.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             Background="{StaticResource BackgroundLightBrush}">
    <UserControl.Resources>
        <converters:RecurrenceTypeToSwedishConverter x:Key="RecurrenceTypeToSwedishConverter"/>
    </UserControl.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Ã…terkommande Transaktioner"
                   Style="{StaticResource SectionHeaderStyle}"/>

        <!-- Recurring Transaction List -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Margin="0,20,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Content="+ Ny Ã¥terkommande transaktion"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding AddRecurringTransactionCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,15"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <DataGrid ItemsSource="{Binding RecurringTransactions}"
                              SelectedItem="{Binding SelectedRecurringTransaction}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              Background="Transparent"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              RowHeight="50"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Disabled"
                              EnableRowVirtualization="False"
                              MouseDoubleClick="DataGrid_MouseDoubleClick"
                              RowStyle="{StaticResource StandardDataGridRowStyle}"
                              CellStyle="{StaticResource StandardDataGridCellStyle}"
                              ColumnHeaderStyle="{StaticResource StandardDataGridColumnHeaderStyle}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Beskrivning"
                                                Binding="{Binding Description}"
                                                Width="*"/>

                            <DataGridTextColumn Header="Kategori"
                                                Binding="{Binding Category.Name}"
                                                Width="150"/>

                            <DataGridTextColumn Header="Belopp"
                                                Binding="{Binding Amount, StringFormat='{}{0:N0} kr'}"
                                                Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Right"/>
                                        <Setter Property="FontWeight"
                                                Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}"
                                                         Value="Income">
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource IncomeBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}"
                                                         Value="Expense">
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource ExpenseBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Ã…terkommer"
                                                Binding="{Binding RecurrenceType, Converter={StaticResource RecurrenceTypeToSwedishConverter}}"
                                                Width="100"/>

                            <DataGridTemplateColumn Header="Status"
                                                    Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsActive, Mode=OneWay}"
                                                  Content="Aktiv"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="False"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header=""
                                                    Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.DeleteRecurringTransactionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding Id}"
                                                Style="{StaticResource IconButtonDangerStyle}"
                                                ToolTip="Ta bort">
                                            <TextBlock Text="ðŸ—‘ï¸"
                                                       FontSize="16"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
