<Window x:Class="YHABudget.WPF.Dialogs.RecurringTransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YHABudget.WPF.Converters"
        mc:Ignorable="d"
        Height="750"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Colors.xaml"/>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <local:RecurringEditModeTitleConverter x:Key="RecurringEditModeTitleConverter"/>
            <local:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
            <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <local:RecurrenceTypeToVisibilityConverter x:Key="RecurrenceTypeToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{Binding IsEditMode, Converter={StaticResource RecurringEditModeTitleConverter}}"
                   Style="{StaticResource SectionHeaderStyle}"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                ClipToBounds="False">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          ClipToBounds="False">
                <StackPanel>
                    <!-- Transaction Type -->
                    <TextBlock Text="Typ:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,20">
                        <RadioButton Content="Utgift"
                                     IsChecked="{Binding TransactionType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Expense}"
                                     GroupName="TransactionType"
                                     Margin="0,0,20,0"
                                     VerticalAlignment="Center"/>
                        <RadioButton Content="Inkomst"
                                     IsChecked="{Binding TransactionType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Income}"
                                     GroupName="TransactionType"
                                     VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Amount -->
                    <TextBlock Text="Belopp:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}"
                             GotFocus="TextBox_GotFocus"
                             PreviewTextInput="NumericTextBox_PreviewTextInput"
                             Margin="0,0,0,20"/>

                    <!-- Description -->
                    <TextBlock Text="Beskrivning:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,0,0,20"/>

                    <!-- Category -->
                    <TextBlock Text="Kategori:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding AvailableCategories}"
                              SelectedValue="{Binding SelectedCategoryId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              VerticalContentAlignment="Center"
                              Padding="8"
                              MaxDropDownHeight="150"
                              Margin="0,0,0,20"
                              Background="White">
                        <ComboBox.Resources>
                            <Style TargetType="{x:Type Popup}">
                                <Setter Property="AllowsTransparency"
                                        Value="False"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <!-- Recurrence Type -->
                    <TextBlock Text="Återkommer:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,20">
                        <RadioButton Content="Månadsvis"
                                     IsChecked="{Binding RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Monthly}"
                                     GroupName="RecurrenceType"
                                     Margin="0,0,20,0"
                                     VerticalAlignment="Center"/>
                        <RadioButton Content="Årligen"
                                     IsChecked="{Binding RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Yearly}"
                                     GroupName="RecurrenceType"
                                     VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Recurrence Month (only visible for Yearly) -->
                    <StackPanel Visibility="{Binding RecurrenceType, Converter={StaticResource RecurrenceTypeToVisibilityConverter}}">
                        <TextBlock Text="Månad:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding RecurrenceMonth}"
                                  VerticalContentAlignment="Center"
                                  Padding="8"
                                  Margin="0,0,0,20"
                                  Background="White">
                            <ComboBoxItem Content="Januari"
                                          Tag="1"/>
                            <ComboBoxItem Content="Februari"
                                          Tag="2"/>
                            <ComboBoxItem Content="Mars"
                                          Tag="3"/>
                            <ComboBoxItem Content="April"
                                          Tag="4"/>
                            <ComboBoxItem Content="Maj"
                                          Tag="5"/>
                            <ComboBoxItem Content="Juni"
                                          Tag="6"/>
                            <ComboBoxItem Content="Juli"
                                          Tag="7"/>
                            <ComboBoxItem Content="Augusti"
                                          Tag="8"/>
                            <ComboBoxItem Content="September"
                                          Tag="9"/>
                            <ComboBoxItem Content="Oktober"
                                          Tag="10"/>
                            <ComboBoxItem Content="November"
                                          Tag="11"/>
                            <ComboBoxItem Content="December"
                                          Tag="12"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Start Date -->
                    <TextBlock Text="Startdatum:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <DatePicker SelectedDate="{Binding StartDate}"
                                Margin="0,0,0,20"
                                VerticalContentAlignment="Center"
                                Padding="8"/>

                    <!-- End Date -->
                    <TextBlock Text="Slutdatum (valfritt):"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <DatePicker SelectedDate="{Binding EndDate}"
                                Margin="0,0,0,20"
                                VerticalContentAlignment="Center"
                                Padding="8"/>

                    <!-- Is Active -->
                    <CheckBox Content="Aktiv"
                              IsChecked="{Binding IsActive}"
                              Margin="0,0,0,15"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Error Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Margin="0,10,0,10"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Avbryt"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Command="{Binding CancelCommand}"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    MinWidth="100"/>
            <Button Content="Spara"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding SaveCommand}"
                    Padding="20,10"
                    MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>
