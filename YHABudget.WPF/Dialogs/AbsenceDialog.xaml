<Window x:Class="YHABudget.WPF.Dialogs.AbsenceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:enums="clr-namespace:YHABudget.Data.Enums;assembly=YHABudget.Data"
        xmlns:local="clr-namespace:YHABudget.WPF.Converters"
        Title="Registrera frånvaro"
        Width="550"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Colors.xaml"/>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Registrera frånvaro"
                   Style="{StaticResource SectionHeaderStyle}"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}">
            <StackPanel>
                <!-- Date -->
                <TextBlock Text="Datum:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <DatePicker SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,0,20"/>

                <!-- Type -->
                <TextBlock Text="Typ av frånvaro:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton Content="Sjuk"
                                 IsChecked="{Binding Type, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Sick}"
                                 Margin="0,0,20,0"/>
                    <RadioButton Content="VAB (Vård av barn)"
                                 IsChecked="{Binding Type, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=VAB}"/>
                </StackPanel>

                <!-- Note -->
                <TextBlock Text="Anteckning (valfritt):"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputTextBoxStyle}"
                         Margin="0,0,0,20"/>

                <!-- Calculation Results -->
                <Border Background="{StaticResource PrimaryLightBrush}"
                        Padding="15"
                        CornerRadius="4"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Beräknad påverkan"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Dagsinkomst:"
                                       FontSize="14"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       FontSize="14"
                                       TextAlignment="Right">
                                <Run Text="{Binding DailyIncome, StringFormat=N0, Mode=OneWay}"/>
                                <Run Text="kr"/>
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Avdrag från lön:"
                                       FontSize="14"
                                       Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       FontSize="14"
                                       Margin="0,5,0,0"
                                       TextAlignment="Right">
                                <Run Text="-"/>
                                <Run Text="{Binding Deduction, StringFormat=N0, Mode=OneWay}"/>
                                <Run Text="kr"/>
                            </TextBlock>

                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Ersättning (80%):"
                                       FontSize="14"
                                       Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       FontSize="14"
                                       Margin="0,5,0,0"
                                       TextAlignment="Right">
                                <Run Text="+"/>
                                <Run Text="{Binding Compensation, StringFormat=N0, Mode=OneWay}"/>
                                <Run Text="kr"/>
                            </TextBlock>
                        </Grid>

                        <TextBlock Text="* VAB har inkomsttak på 410 000 kr/år (7,5 PBB)"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Avbryt"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Spara"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
