<Window x:Class="YHABudget.WPF.Dialogs.AbsenceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:enums="clr-namespace:YHABudget.Data.Enums;assembly=YHABudget.Data"
        Title="Registrera frånvaro"
        Width="550"
        Height="550"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundLightBrush}"
        ResizeMode="NoResize">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Date -->
            <Label Content="Datum" Style="{StaticResource FormLabelStyle}"/>
            <DatePicker SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource FormDatePickerStyle}"
                        Margin="0,0,0,20"/>

            <!-- Type -->
            <Label Content="Typ av frånvaro" Style="{StaticResource FormLabelStyle}"/>
            <ComboBox SelectedValue="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Style="{StaticResource FormComboBoxStyle}"
                      Margin="0,0,0,20">
                <ComboBoxItem Content="Sjuk" Tag="{x:Static enums:AbsenceType.Sick}"/>
                <ComboBoxItem Content="VAB (Vård av barn)" Tag="{x:Static enums:AbsenceType.VAB}"/>
            </ComboBox>

            <!-- Note -->
            <Label Content="Anteckning (valfritt)" Style="{StaticResource FormLabelStyle}"/>
            <TextBox Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource FormTextBoxStyle}"
                     Margin="0,0,0,20"/>

            <!-- Calculation Results -->
            <Border Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Beräknad påverkan"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Dagsinkomst:"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1">
                            <Run Text="{Binding DailyIncome, StringFormat=N0, Mode=OneWay}"/>
                            <Run Text="kr"/>
                        </TextBlock>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Avdrag från lön:"
                                   Foreground="#E53E3E"
                                   Margin="0,5,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Foreground="#E53E3E"
                                   Margin="0,5,0,0">
                            <Run Text="-"/>
                            <Run Text="{Binding Deduction, StringFormat=N0, Mode=OneWay}"/>
                            <Run Text="kr"/>
                        </TextBlock>

                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Ersättning (80%):"
                                   Foreground="#38A169"
                                   Margin="0,5,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   Foreground="#38A169"
                                   Margin="0,5,0,0">
                            <Run Text="+"/>
                            <Run Text="{Binding Compensation, StringFormat=N0, Mode=OneWay}"/>
                            <Run Text="kr"/>
                        </TextBlock>

                        <Rectangle Grid.Row="3" Grid.ColumnSpan="2"
                                   Height="1"
                                   Fill="{StaticResource DividerBrush}"
                                   Margin="0,10,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Nettopåverkan:"
                                   FontWeight="SemiBold"
                                   Margin="0,10,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                   FontWeight="SemiBold"
                                   Margin="0,10,0,0">
                            <Run Text="{Binding Compensation, Converter={StaticResource SubtractConverter}, ConverterParameter={Binding Deduction}, StringFormat=N0, Mode=OneWay}"/>
                            <Run Text="kr"/>
                        </TextBlock>
                    </Grid>

                    <TextBlock Text="* VAB har inkomsttak på 410 000 kr/år (7,5 PBB)"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"
                               Visibility="{Binding Type, Converter={StaticResource AbsenceTypeToVisibilityConverter}}"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Avbryt"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Spara"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
