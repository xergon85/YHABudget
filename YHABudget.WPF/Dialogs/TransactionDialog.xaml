<Window x:Class="YHABudget.WPF.Dialogs.TransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YHABudget.WPF.Converters"
        mc:Ignorable="d"
        Height="650"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Colors.xaml"/>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <local:EditModeTitleConverter x:Key="EditModeTitleConverter"/>
            <local:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
            <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{Binding IsEditMode, Converter={StaticResource EditModeTitleConverter}}"
                   Style="{StaticResource SectionHeaderStyle}"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                ClipToBounds="False">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          ClipToBounds="False">
                <StackPanel>
                    <!-- Transaction Type -->
                    <TextBlock Text="Typ:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,20">
                        <RadioButton Content="Utgift"
                                     IsChecked="{Binding TransactionType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Expense}"
                                     GroupName="TransactionType"
                                     Margin="0,0,20,0"
                                     VerticalAlignment="Center"/>
                        <RadioButton Content="Inkomst"
                                     IsChecked="{Binding TransactionType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Income}"
                                     GroupName="TransactionType"
                                     VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Amount -->
                    <TextBlock Text="Belopp:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}"
                             GotFocus="TextBox_GotFocus"
                             PreviewTextInput="NumericTextBox_PreviewTextInput"
                             Margin="0,0,0,20"/>

                    <!-- Description -->
                    <TextBlock Text="Beskrivning:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,0,0,20"/>

                    <!-- Date -->
                    <TextBlock Text="Datum:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <DatePicker SelectedDate="{Binding Date}"
                                Margin="0,0,0,20"
                                VerticalContentAlignment="Center"
                                Padding="8"/>

                    <!-- Category -->
                    <TextBlock Text="Kategori:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding AvailableCategories}"
                              SelectedValue="{Binding SelectedCategoryId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              VerticalContentAlignment="Center"
                              Padding="8"
                              MaxDropDownHeight="140"
                              Margin="0,0,0,15"
                              Background="White">
                        <ComboBox.Resources>
                            <Style TargetType="{x:Type Popup}">
                                <Setter Property="AllowsTransparency"
                                        Value="False"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Error Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Margin="0,10,0,10"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Avbryt"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Command="{Binding CancelCommand}"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    MinWidth="100"/>
            <Button Content="Spara"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding SaveCommand}"
                    Padding="20,10"
                    MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>
